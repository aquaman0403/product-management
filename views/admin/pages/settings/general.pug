extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    h1 Cài đặt chung
    +alert-error(5000)
    +alert-success(5000)
    form(
        action=`${prefixAdmin}/settings/general?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="websiteName") Tên trang
            input(
                type="text"
                name="websiteName"
                id="websiteName"
                class="form-control"
            )
        div(class="form-group", upload-image)
            label(for="logo") Logo
            input(
                type="file"
                name="logo"
                id="logo"
                class="form-control-file"
                accept="image/*"
                upload-image-input
            )
            img(
                src=""
                class="image-preview"
                upload-image-preview
            )
        div(class="form-group")
            label(for="phone") Số điện thoại
            input(
                type="text"
                name="phone"
                id="phone"
                class="form-control"
            )
        div(class="form-group")
            label(for="email")  Email
            input(
                type="text"
                name="email"
                id="email"
                class="form-control"
            )
        div(class="form-group")
            label(for="address")  Địa chỉ
            input(
                type="text"
                name="address"
                id="address"
                class="form-control"
            )
        div(class="form-group")
            label(for="copyright")  Bản quyền
            input(
                type="text"
                name="copyright"
                id="copyright"
                class="form-control"
            )
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Lưu lại   
    