extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3 
    .row
      .col-12 
        +box-head("Danh sách phòng")
    
    .row.mb-3 
      .col-12 
        a(
          href=`/rooms-chat/create`
          class="btn btn-sm btn-success mr-1 float-end"
        ) Tạo phòng chat 
    .row
      each room in listRoomsChat
        .col-6 
          div(class="box-room")
            div(class="inner-avatar")
              img(
                src="https://robohash.org/89E.png?set=set1"
                alt="avatar"
              )
            div(class="inner-info")
              div(class="inner-name") #{room.title}
              div(class="inner-buttons")
                a(
                  href=`/chat/${room.id}`
                  class="btn btn-sm btn-primary mr-1"
                ) Nhắn tin