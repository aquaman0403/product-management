extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(5000)
    .container.my-5 
        .row.justify-content-center 
            .col-8
                h1(class="text-center") Nhập mã OTP xác thực
                form(method="POST" action=`/user/password/otp`)
                    div(class="mb-3")
                        label(for="email" class="form-label") Email
                        input(type="email" class="form-control" id="email" name="email" value=email readonly required)
                    div(class="mb-3")
                        label(for="otp" class="form-label") Mã OTP
                        input(type="text" class="form-control" id="otp" name="otp" required)
                    div(class="d-grid")
                        button(type="submit" class="btn btn-primary") Xác thực mã OTP
