extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(5000)
    .container.my-5 
        .row.justify-content-center 
            .col-8
                h1(class="text-center") Đặt lại mật khẩu
                form(method="POST" action="/user/password/reset")
                    div(class="mb-3")
                        label(for="password" class="form-label") Mật khẩu mới
                        input(type="password" class="form-control" id="password" name="password" required placeholder="Nhập mật khẩu mới")
                    div(class="mb-3")
                        label(for="confirmPassword" class="form-label") Xác nhận mật khẩu
                        input(type="password" class="form-control" id="confirmPassword" name="confirmPassword" required placeholder="Nhập lại mật khẩu mới")
                    div(class="d-grid")
                        button(type="submit" class="btn btn-primary") Đặt lại mật khẩu
